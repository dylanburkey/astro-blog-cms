    width: 100%;
    padding: 0.75rem;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    color: var(--color-text);
  }

  .form-control:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--color-primary-alpha-10);
  }

  .help-text {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin-top: 0.25rem;
  }

  @media (max-width: 768px) {
    .tag-admin {
      padding: 1rem;
    }

    .admin-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>

<script>
  // Generate slug from name
  document.getElementById('tagName')?.addEventListener('input', (e) => {
    const name = e.target.value;
    const slugField = document.getElementById('tagSlug');
    if (slugField && !slugField.dataset.manual) {
      slugField.value = name.toLowerCase()
        .replace(/[^a-z0-9]+/g, '-')
        .replace(/^-+|-+$/g, '');
    }
  });

  // Mark slug as manually edited
  document.getElementById('tagSlug')?.addEventListener('input', (e) => {
    e.target.dataset.manual = 'true';
  });

  // Add tag button
  document.getElementById('addTagBtn')?.addEventListener('click', () => {
    document.getElementById('modalTitle').textContent = 'Add Tag';
    document.getElementById('tagForm').reset();
    document.getElementById('tagId').value = '';
    document.getElementById('tagSlug').dataset.manual = '';
    document.getElementById('tagModal').classList.add('show');
  });

  // Edit tag
  window.editTag = function(id, name, slug, description) {
    document.getElementById('modalTitle').textContent = 'Edit Tag';
    document.getElementById('tagId').value = id;
    document.getElementById('tagName').value = name;
    document.getElementById('tagSlug').value = slug;
    document.getElementById('tagSlug').dataset.manual = 'true';
    document.getElementById('tagDescription').value = description;
    document.getElementById('tagModal').classList.add('show');
  };

  // Close modal
  window.closeTagModal = function() {
    document.getElementById('tagModal').classList.remove('show');
  };

  // Delete tag
  window.deleteTag = async function(id, name) {
    if (!confirm(`Are you sure you want to delete the tag "${name}"? It will be removed from all posts.`)) {
      return;
    }

    try {
      const response = await fetch('/ax7k9m2p5d/api/blog/tag/delete.json', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ id })
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert(error.message || 'Failed to delete tag');
      }
    } catch (error) {
      console.error('Error deleting tag:', error);
      alert('An error occurred while deleting the tag');
    }
  };

  // Handle form submission
  document.getElementById('tagForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData);
    
    const isEdit = !!data.id;
    const url = isEdit 
      ? '/ax7k9m2p5d/api/blog/tag/update.json'
      : '/ax7k9m2p5d/api/blog/tag/create.json';
    
    try {
      const response = await fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert(error.message || 'Failed to save tag');
      }
    } catch (error) {
      console.error('Error saving tag:', error);
      alert('An error occurred while saving the tag');
    }
  });

  // Close modal on outside click
  document.getElementById('tagModal')?.addEventListener('click', (e) => {
    if (e.target === e.currentTarget) {
      closeTagModal();
    }
  });
</script>