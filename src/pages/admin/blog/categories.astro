<script define:vars={{ categories }}>
  // Store categories data
  let categoriesData = categories;
  let draggedItem = null;
  let draggedId = null;

  // Build tree structure
  function buildTree(items, parentId = null) {
    return items
      .filter(item => item.parent_id === parentId)
      .sort((a, b) => a.sort_order - b.sort_order)
      .map(item => ({
        ...item,
        children: buildTree(items, item.id)
      }));
  }

  // Render tree HTML
  function renderTree(tree, isNested = false) {
    if (!tree.length) return '';
    
    const listClass = isNested ? 'category-list nested' : 'category-list';
    let html = `<ul class="${listClass}">`;
    
    for (const cat of tree) {
      const hasChildren = cat.children && cat.children.length > 0;
      html += `
        <li class="category-item" data-id="${cat.id}">
          <div class="category-row" draggable="true" data-id="${cat.id}">
            <div class="drag-handle">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="9" cy="5" r="1"></circle>
                <circle cx="9" cy="12" r="1"></circle>
                <circle cx="9" cy="19" r="1"></circle>
                <circle cx="15" cy="5" r="1"></circle>
                <circle cx="15" cy="12" r="1"></circle>
                <circle cx="15" cy="19" r="1"></circle>
              </svg>
            </div>
            ${hasChildren ? `
              <button class="toggle-children" onclick="toggleChildren(${cat.id})">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="6 9 12 15 18 9"></polyline>
                </svg>
              </button>
            ` : ''}
            <div class="category-info">
              <span class="category-name">${escapeHtml(cat.name)}</span>
              <span class="category-slug">/${escapeHtml(cat.slug)}</span>
              <span class="category-count">${cat.post_count} posts</span>
            </div>
            <div class="category-actions">
              <button class="btn-icon" onclick="editCategory(${cat.id}, '${escapeAttr(cat.name)}', '${escapeAttr(cat.slug)}', '${escapeAttr(cat.description || '')}', ${cat.parent_id || 'null'})" title="Edit">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"></path>
                  <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
              </button>
              <button class="btn-icon btn-danger" onclick="deleteCategory(${cat.id}, '${escapeAttr(cat.name)}')" title="Delete">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"></path>
                </svg>
              </button>
            </div>
          </div>
          ${hasChildren ? `<div class="children-container" id="children-${cat.id}">${renderTree(cat.children, true)}</div>` : ''}
        </li>
      `;
    }
    
    html += '</ul>';
    return html;
  }

  function escapeHtml(str) {
    const div = document.createElement('div');
    div.textContent = str;
    return div.innerHTML;
  }

  function escapeAttr(str) {
    return str.replace(/'/g, "\\'").replace(/"/g, '\\"');
  }

  // Initial render
  function renderCategories() {
    const tree = buildTree(categoriesData);
    const container = document.getElementById('categoriesTree');
    const emptyState = document.getElementById('emptyState');
    
    if (tree.length === 0) {
      container.style.display = 'none';
      if (emptyState) emptyState.style.display = 'block';
    } else {
      container.style.display = 'block';
      if (emptyState) emptyState.style.display = 'none';
      container.innerHTML = renderTree(tree);
      setupDragAndDrop();
    }
    
    updateParentSelect();
  }

  // Toggle children visibility
  window.toggleChildren = function(id) {
    const container = document.getElementById(`children-${id}`);
    const button = container?.previousElementSibling?.querySelector('.toggle-children');
    if (container) {
      container.style.display = container.style.display === 'none' ? 'block' : 'none';
      if (button) {
        button.classList.toggle('collapsed', container.style.display === 'none');
      }
    }
  };

  // Drag and drop
  function setupDragAndDrop() {
    const rows = document.querySelectorAll('.category-row');
    
    rows.forEach(row => {
      row.addEventListener('dragstart', handleDragStart);
      row.addEventListener('dragend', handleDragEnd);
      row.addEventListener('dragover', handleDragOver);
      row.addEventListener('dragleave', handleDragLeave);
      row.addEventListener('drop', handleDrop);
    });
  }

  function handleDragStart(e) {
    draggedId = this.dataset.id;
    draggedItem = this;
    this.classList.add('dragging');
    e.dataTransfer.effectAllowed = 'move';
    e.dataTransfer.setData('text/plain', draggedId);
  }

  function handleDragEnd(e) {
    this.classList.remove('dragging');
    document.querySelectorAll('.drag-over, .drag-over-child').forEach(el => {
      el.classList.remove('drag-over', 'drag-over-child');
    });
    draggedItem = null;
    draggedId = null;
  }

  function handleDragOver(e) {
    e.preventDefault();
    if (this.dataset.id === draggedId) return;
    
    const rect = this.getBoundingClientRect();
    const midY = rect.top + rect.height / 2;
    
    // Clear previous indicators
    document.querySelectorAll('.drag-over, .drag-over-child').forEach(el => {
      el.classList.remove('drag-over', 'drag-over-child');
    });
    
    // Bottom third = nest as child, otherwise = reorder
    if (e.clientY > rect.top + rect.height * 0.66) {
      this.classList.add('drag-over-child');
    } else {
      this.classList.add('drag-over');
    }
  }

  function handleDragLeave(e) {
    this.classList.remove('drag-over', 'drag-over-child');
  }

  async function handleDrop(e) {
    e.preventDefault();
    
    const targetId = this.dataset.id;
    if (targetId === draggedId) return;
    
    const isChild = this.classList.contains('drag-over-child');
    this.classList.remove('drag-over', 'drag-over-child');
    
    // Find target category
    const targetCat = categoriesData.find(c => c.id == targetId);
    
    let newParentId, newIndex;
    
    if (isChild) {
      // Nest under target
      newParentId = parseInt(targetId);
      const siblings = categoriesData.filter(c => c.parent_id == targetId);
      newIndex = siblings.length; // Add at end
    } else {
      // Reorder - place before target
      newParentId = targetCat.parent_id;
      const siblings = categoriesData
        .filter(c => c.parent_id === newParentId && c.id != draggedId)
        .sort((a, b) => a.sort_order - b.sort_order);
      newIndex = siblings.findIndex(c => c.id == targetId);
      if (newIndex === -1) newIndex = siblings.length;
    }
    
    try {
      const response = await fetch('/ax7k9m2p5d/api/blog/category/reorder.json', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          categoryId: parseInt(draggedId),
          newParentId: newParentId || null,
          newIndex
        })
      });
      
      if (response.ok) {
        // Update local data and re-render
        const cat = categoriesData.find(c => c.id == draggedId);
        if (cat) {
          cat.parent_id = newParentId || null;
        }
        window.location.reload(); // Simple refresh to get updated sort orders
      } else {
        const error = await response.json();
        alert(error.error || 'Failed to move category');
      }
    } catch (error) {
      console.error('Error moving category:', error);
      alert('An error occurred while moving the category');
    }
  }

  // Update parent select options
  function updateParentSelect(excludeId = null) {
    const select = document.getElementById('categoryParent');
    const tree = buildTree(categoriesData);
    
    let options = '<option value="">None (Top Level)</option>';
    
    function addOptions(items, depth = 0) {
      for (const item of items) {
        if (item.id != excludeId) {
          const indent = 'â€”'.repeat(depth);
          options += `<option value="${item.id}">${indent}${indent ? ' ' : ''}${escapeHtml(item.name)}</option>`;
          if (item.children) {
            addOptions(item.children, depth + 1);
          }
        }
      }
    }
    
    addOptions(tree);
    select.innerHTML = options;
  }

  // Generate slug from name
  document.getElementById('categoryName')?.addEventListener('input', (e) => {
    const name = e.target.value;
    const slugField = document.getElementById('categorySlug');
    if (slugField && !slugField.dataset.manual) {
      slugField.value = name.toLowerCase()
        .replace(/[^a-z0-9]+/g, '-')
        .replace(/^-+|-+$/g, '');
    }
  });

  // Mark slug as manually edited
  document.getElementById('categorySlug')?.addEventListener('input', (e) => {
    e.target.dataset.manual = 'true';
  });

  // Add category button
  document.getElementById('addCategoryBtn')?.addEventListener('click', () => {
    document.getElementById('modalTitle').textContent = 'Add Category';
    document.getElementById('categoryForm').reset();
    document.getElementById('categoryId').value = '';
    document.getElementById('categorySlug').dataset.manual = '';
    updateParentSelect();
    document.getElementById('categoryModal').classList.add('show');
  });

  // Edit category
  window.editCategory = function(id, name, slug, description, parentId) {
    document.getElementById('modalTitle').textContent = 'Edit Category';
    document.getElementById('categoryId').value = id;
    document.getElementById('categoryName').value = name;
    document.getElementById('categorySlug').value = slug;
    document.getElementById('categorySlug').dataset.manual = 'true';
    document.getElementById('categoryDescription').value = description;
    updateParentSelect(id);
    document.getElementById('categoryParent').value = parentId || '';
    document.getElementById('categoryModal').classList.add('show');
  };

  // Close modal
  window.closeCategoryModal = function() {
    document.getElementById('categoryModal').classList.remove('show');
  };

  // Delete category
  window.deleteCategory = async function(id, name) {
    if (!confirm(`Are you sure you want to delete the category "${name}"? Child categories will become top-level. Posts in this category will become uncategorized.`)) {
      return;
    }

    try {
      const response = await fetch('/ax7k9m2p5d/api/blog/category/delete.json', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ id })
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert(error.message || 'Failed to delete category');
      }
    } catch (error) {
      console.error('Error deleting category:', error);
      alert('An error occurred while deleting the category');
    }
  };

  // Handle form submission
  document.getElementById('categoryForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData);
    
    // Convert empty parent_id to null
    if (data.parent_id === '') {
      data.parent_id = null;
    } else if (data.parent_id) {
      data.parent_id = parseInt(data.parent_id);
    }
    
    const isEdit = !!data.id;
    const url = isEdit 
      ? '/ax7k9m2p5d/api/blog/category/update.json'
      : '/ax7k9m2p5d/api/blog/category/create.json';
    
    try {
      const response = await fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert(error.message || 'Failed to save category');
      }
    } catch (error) {
      console.error('Error saving category:', error);
      alert('An error occurred while saving the category');
    }
  });

  // Close modal on outside click
  document.getElementById('categoryModal')?.addEventListener('click', (e) => {
    if (e.target === e.currentTarget) {
      closeCategoryModal();
    }
  });

  // Initial render
  renderCategories();
</script>
