</style>

<script>
  // State
  let images = [];
  let filteredImages = [];
  let selectedImage = null;
  let originalDimensions = { width: 0, height: 0 };
  let lockAspectRatio = true;
  let currentFilter = 'none';

  // DOM
  const mediaGrid = document.getElementById('media-grid');
  const mediaList = document.getElementById('media-list');
  const listContent = document.getElementById('list-content');
  const searchInput = document.getElementById('search-input');
  const sortSelect = document.getElementById('sort-select');

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    loadImages();
    setupEventListeners();
  });

  function setupEventListeners() {
    // Upload modal
    document.getElementById('upload-btn')?.addEventListener('click', () => {
      document.getElementById('upload-modal')?.classList.add('active');
    });

    // Close modals
    document.querySelectorAll('.modal-close').forEach(btn => {
      btn.addEventListener('click', () => btn.closest('.modal')?.classList.remove('active'));
    });

    document.querySelectorAll('.modal').forEach(modal => {
      modal.addEventListener('click', (e) => {
        if (e.target === modal) modal.classList.remove('active');
      });
    });

    // File upload
    const fileInput = document.getElementById('file-input');
    const uploadArea = document.getElementById('upload-area');

    fileInput?.addEventListener('change', (e) => {
      const files = Array.from(e.target.files);
      if (files.length) uploadFiles(files);
      e.target.value = '';
    });

    uploadArea?.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadArea.classList.add('drag-over');
    });

    uploadArea?.addEventListener('dragleave', () => {
      uploadArea.classList.remove('drag-over');
    });

    uploadArea?.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadArea.classList.remove('drag-over');
      const files = Array.from(e.dataTransfer.files).filter(f => f.type.startsWith('image/'));
      if (files.length) uploadFiles(files);
    });

    // Filters
    searchInput?.addEventListener('input', filterAndRender);
    sortSelect?.addEventListener('change', filterAndRender);
    document.getElementById('refresh-btn')?.addEventListener('click', loadImages);

    // View toggle
    document.getElementById('grid-view')?.addEventListener('click', () => setView('grid'));
    document.getElementById('list-view')?.addEventListener('click', () => setView('list'));

    // Editor controls
    setupEditorControls();

    // Copy buttons
    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const inputId = btn.dataset.copy;
        const input = document.getElementById(inputId);
        if (input) {
          navigator.clipboard.writeText(input.value);
          btn.textContent = 'Copied!';
          setTimeout(() => btn.textContent = 'Copy', 1500);
        }
      });
    });

    // Details modal actions
    document.getElementById('edit-image-btn')?.addEventListener('click', () => {
      document.getElementById('details-modal')?.classList.remove('active');
      openEditor(selectedImage);
    });

    document.getElementById('delete-image-btn')?.addEventListener('click', deleteSelectedImage);
  }

  function setupEditorControls() {
    // Lock aspect ratio
    const lockBtn = document.getElementById('lock-ratio');
    lockBtn?.addEventListener('click', () => {
      lockAspectRatio = !lockAspectRatio;
      lockBtn.classList.toggle('active', lockAspectRatio);
    });

    // Resize inputs
    const widthInput = document.getElementById('resize-width');
    const heightInput = document.getElementById('resize-height');

    widthInput?.addEventListener('input', () => {
      if (lockAspectRatio && originalDimensions.width) {
        const ratio = originalDimensions.height / originalDimensions.width;
        heightInput.value = Math.round(widthInput.value * ratio);
      }
      updatePreviewSize();
    });

    heightInput?.addEventListener('input', () => {
      if (lockAspectRatio && originalDimensions.height) {
        const ratio = originalDimensions.width / originalDimensions.height;
        widthInput.value = Math.round(heightInput.value * ratio);
      }
      updatePreviewSize();
    });

    // Preset sizes
    document.querySelectorAll('.preset-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const [w, h] = btn.dataset.size.split('x').map(Number);
        widthInput.value = w;
        heightInput.value = h;
        updatePreviewSize();
      });
    });

    // Filter buttons
    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        currentFilter = btn.dataset.filter;
        applyFilters();
      });
    });

    // Adjustment sliders
    const sliders = ['brightness', 'contrast', 'saturation', 'blur', 'shadow'];
    sliders.forEach(name => {
      const slider = document.getElementById(`adj-${name}`);
      slider?.addEventListener('input', () => {
        const valueSpan = slider.parentElement.querySelector('.slider-value');
        if (name === 'blur' || name === 'shadow') {
          valueSpan.textContent = `${slider.value}px`;
        } else {
          valueSpan.textContent = `${slider.value}%`;
        }
        applyFilters();
      });
    });

    // Reset
    document.getElementById('reset-adjustments')?.addEventListener('click', resetAdjustments);

    // Save
    document.getElementById('save-copy')?.addEventListener('click', () => saveImage(false));
    document.getElementById('save-replace')?.addEventListener('click', () => saveImage(true));
  }

  async function loadImages() {
    try {
      mediaGrid.innerHTML = '<div class="loading-state"><div class="spinner"></div><p>Loading images...</p></div>';

      const response = await fetch('/admin/api/list-images.json');
      const data = await response.json();

      if (data.success) {
        images = data.images || [];
        filterAndRender();
      } else {
        throw new Error(data.error);
      }

      if (images.length === 0) {
        mediaGrid.innerHTML = '<div class="loading-state"><p>No images yet. Upload some!</p></div>';
      }
    } catch (error) {
      console.error('Error loading images:', error);
      mediaGrid.innerHTML = '<div class="loading-state"><p>Error loading images</p></div>';
    }
  }

  async function uploadFiles(files) {
    const progress = document.getElementById('upload-progress');
    progress.innerHTML = '';

    for (const file of files) {
      const item = document.createElement('div');
      item.className = 'progress-item';
      item.innerHTML = `
        <span>${file.name}</span>
        <div class="progress-bar"><div class="progress-fill" style="width: 0"></div></div>
        <span class="status">Uploading...</span>
      `;
      progress.appendChild(item);

      const fill = item.querySelector('.progress-fill');
      const status = item.querySelector('.status');

      try {
        fill.style.width = '30%';
        const formData = new FormData();
        formData.append('image', file);

        const res = await fetch('/admin/api/upload-image.json', { method: 'POST', body: formData });
        fill.style.width = '100%';

        if (res.ok) {
          status.textContent = 'Done';
          status.style.color = '#22c55e';
        } else {
          const err = await res.json();
          status.textContent = err.error || 'Error';
          status.style.color = '#ef4444';
        }
      } catch (e) {
        status.textContent = 'Error';
        status.style.color = '#ef4444';
      }
    }

    setTimeout(loadImages, 1000);
  }

  function filterAndRender() {
    const term = searchInput?.value.toLowerCase() || '';
    const sort = sortSelect?.value || 'newest';

    filteredImages = images.filter(img => img.name.toLowerCase().includes(term));

    filteredImages.sort((a, b) => {
      switch (sort) {
        case 'newest': return new Date(b.uploadDate) - new Date(a.uploadDate);
        case 'oldest': return new Date(a.uploadDate) - new Date(b.uploadDate);
        case 'name': return a.name.localeCompare(b.name);
        case 'size': return b.size - a.size;
        default: return 0;
      }
    });

    renderGrid();
    renderList();
  }

  function renderGrid() {
    if (!filteredImages.length) {
      mediaGrid.innerHTML = '<div class="loading-state"><p>No images found</p></div>';
      return;
    }

    mediaGrid.innerHTML = filteredImages.map(img => `
      <div class="media-item" data-id="${img.id}">
        <div class="media-thumb">
          <img src="${img.url}" alt="${img.name}" loading="lazy" />
          <div class="media-overlay">
            <button class="overlay-btn" data-action="edit" title="Edit">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
              </svg>
            </button>
            <button class="overlay-btn" data-action="copy" title="Copy URL">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
              </svg>
            </button>
          </div>
        </div>
        <div class="media-meta">
          <div class="media-name">${img.name}</div>
          <div class="media-details">
            <span>${formatSize(img.size)}</span>
            <span>${formatDate(img.uploadDate)}</span>
          </div>
        </div>
      </div>
    `).join('');

    // Event delegation
    mediaGrid.addEventListener('click', handleGridClick);
  }

  function handleGridClick(e) {
    const item = e.target.closest('.media-item');
    if (!item) return;

    const id = item.dataset.id;
    const image = images.find(i => i.id === id);
    if (!image) return;

    const action = e.target.closest('[data-action]')?.dataset.action;

    if (action === 'edit') {
      e.stopPropagation();
      openEditor(image);
    } else if (action === 'copy') {
      e.stopPropagation();
      navigator.clipboard.writeText(image.url);
    } else {
      showDetails(image);
    }
  }

  function renderList() {
    if (!filteredImages.length) {
      listContent.innerHTML = '<div class="loading-state"><p>No images found</p></div>';
      return;
    }

    listContent.innerHTML = filteredImages.map(img => `
      <div class="list-item" data-id="${img.id}">
        <div class="list-thumb">
          <img src="${img.url}" alt="${img.name}" loading="lazy" />
        </div>
        <div class="media-name">${img.name}</div>
        <div class="col-size">${formatSize(img.size)}</div>
        <div class="col-date">${formatDate(img.uploadDate)}</div>
        <div class="col-actions">
          <button class="overlay-btn" data-action="edit" title="Edit">Edit</button>
        </div>
      </div>
    `).join('');
  }

  function setView(view) {
    document.getElementById('grid-view')?.classList.toggle('active', view === 'grid');
    document.getElementById('list-view')?.classList.toggle('active', view === 'list');
    mediaGrid.classList.toggle('hidden', view !== 'grid');
    mediaList.classList.toggle('hidden', view !== 'list');
  }

  function showDetails(image) {
    selectedImage = image;
    document.getElementById('details-image').src = image.url;
    document.getElementById('detail-filename').value = image.filename || image.name;
    document.getElementById('detail-url').value = image.url;
    document.getElementById('detail-size').textContent = formatSize(image.size);
    document.getElementById('detail-date').textContent = formatDate(image.uploadDate);

    const img = new Image();
    img.onload = () => {
      document.getElementById('detail-dimensions').textContent = `${img.width} × ${img.height} px`;
    };
    img.src = image.url;

    document.getElementById('details-modal')?.classList.add('active');
  }

  function openEditor(image) {
    selectedImage = image;
    const editorImg = document.getElementById('editor-image');
    editorImg.src = image.url;
    editorImg.style.filter = '';

    const img = new Image();
    img.onload = () => {
      originalDimensions = { width: img.width, height: img.height };
      document.getElementById('resize-width').value = img.width;
      document.getElementById('resize-height').value = img.height;
      document.getElementById('editor-dimensions').textContent = `${img.width} × ${img.height}`;
      document.getElementById('editor-filesize').textContent = formatSize(image.size);
    };
    img.src = image.url;

    resetAdjustments();
    document.getElementById('editor-modal')?.classList.add('active');
  }

  function applyFilters() {
    const editorImg = document.getElementById('editor-image');
    const brightness = document.getElementById('adj-brightness')?.value || 100;
    const contrast = document.getElementById('adj-contrast')?.value || 100;
    const saturation = document.getElementById('adj-saturation')?.value || 100;
    const blur = document.getElementById('adj-blur')?.value || 0;
    const shadow = document.getElementById('adj-shadow')?.value || 0;

    let filterStr = `brightness(${brightness}%) contrast(${contrast}%) saturate(${saturation}%) blur(${blur}px)`;

    switch (currentFilter) {
      case 'grayscale': filterStr += ' grayscale(100%)'; break;
      case 'sepia': filterStr += ' sepia(100%)'; break;
      case 'vintage': filterStr += ' sepia(40%) contrast(90%)'; break;
      case 'cold': filterStr += ' saturate(80%) hue-rotate(180deg)'; break;
      case 'warm': filterStr += ' saturate(120%) sepia(20%)'; break;
      case 'dramatic': filterStr += ' contrast(130%) saturate(120%)'; break;
      case 'fade': filterStr += ' contrast(85%) brightness(105%) saturate(85%)'; break;
    }

    editorImg.style.filter = filterStr;

    if (shadow > 0) {
      editorImg.style.boxShadow = `0 ${shadow/2}px ${shadow}px rgba(0,0,0,0.3)`;
    } else {
      editorImg.style.boxShadow = '';
    }
  }

  function updatePreviewSize() {
    const w = document.getElementById('resize-width')?.value;
    const h = document.getElementById('resize-height')?.value;
    document.getElementById('editor-dimensions').textContent = `${w} × ${h}`;
  }

  function resetAdjustments() {
    const sliders = ['brightness', 'contrast', 'saturation'];
    sliders.forEach(name => {
      const slider = document.getElementById(`adj-${name}`);
      if (slider) {
        slider.value = 100;
        slider.parentElement.querySelector('.slider-value').textContent = '100%';
      }
    });

    ['blur', 'shadow'].forEach(name => {
      const slider = document.getElementById(`adj-${name}`);
      if (slider) {
        slider.value = 0;
        slider.parentElement.querySelector('.slider-value').textContent = '0px';
      }
    });

    currentFilter = 'none';
    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
    document.querySelector('.filter-btn[data-filter="none"]')?.classList.add('active');

    applyFilters();
  }

  async function saveImage(replace) {
    alert(replace ? 'Save & Replace coming soon!' : 'Save as Copy coming soon!');
  }

  async function deleteSelectedImage() {
    if (!selectedImage || !confirm(`Delete "${selectedImage.name}"?`)) return;

    try {
      const res = await fetch('/admin/api/delete-image.json', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ filename: selectedImage.filename || selectedImage.name })
      });

      if (res.ok) {
        document.getElementById('details-modal')?.classList.remove('active');
        loadImages();
      } else {
        const err = await res.json();
        alert(err.error || 'Error deleting');
      }
    } catch (e) {
      alert('Error deleting image');
    }
  }

  function formatSize(bytes) {
    if (!bytes) return '0 B';
    const k = 1024;
    const sizes = ['B', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return (bytes / Math.pow(k, i)).toFixed(1) + ' ' + sizes[i];
  }

  function formatDate(dateStr) {
    if (!dateStr) return '-';
    return new Date(dateStr).toLocaleDateString('en-US', {
      month: 'short', day: 'numeric', year: 'numeric'
    });
  }
</script>
