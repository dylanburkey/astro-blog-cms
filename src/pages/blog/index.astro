    align-items: center;
    justify-content: center;
    background: white;
    border: none;
    border-radius: var(--radius-full);
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all var(--transition-base);
  }

