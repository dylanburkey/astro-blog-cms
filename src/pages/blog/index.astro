---
import Layout from '../../layouts/Layout.astro';
import BlogSidebar from '../../components/BlogSidebar.astro';
import SEO from '../../components/SEO.astro';

// Fetch blog posts from database
let blogPosts = [];
let error = null;

try {
  // Access database directly from Astro.locals.runtime.env.DB
  const db = Astro.locals.runtime?.env?.DB;
  
  if (db) {
    console.log('Database connection available, fetching blog posts...');
    
    // Simplified query without engagement table
    const result = await db.prepare(`
      SELECT 
        p.id,
        p.title,
        p.slug,
        p.excerpt,
        p.content,
        p.cover_image,
        p.published_at,
        p.status,
        u.username as author_name,
        u.avatar as author_avatar,
        (SELECT c.name FROM blog_categories c 
         INNER JOIN blog_post_categories pc ON c.id = pc.category_id 
         WHERE pc.post_id = p.id LIMIT 1) as category_name,
        (SELECT c.slug FROM blog_categories c 
         INNER JOIN blog_post_categories pc ON c.id = pc.category_id 
         WHERE pc.post_id = p.id LIMIT 1) as category_slug
      FROM blog_posts p
      LEFT JOIN admin_users u ON p.author_id = u.id
      WHERE p.status = 'published'
      ORDER BY p.published_at DESC
      LIMIT 20
    `).all();
    
    console.log(`Found ${result.results?.length || 0} blog posts`);
    
    if (result.results && result.results.length > 0) {
      blogPosts = result.results.map(post => ({
        id: post.id,
        title: post.title,
        excerpt: post.excerpt || (post.content ? post.content.substring(0, 200).replace(/<[^>]*>/g, '') + '...' : 'No excerpt available'),
        category: post.category_name || 'General',
        categorySlug: post.category_slug || 'general',
        image: post.cover_image || '/img/blog/default-cover.jpg',
        author: {
          name: post.author_name || 'Blog Author',
          avatar: post.author_avatar || '/img/team/default-avatar.jpg'
        },
        date: new Date(post.published_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }),
        readTime: Math.ceil((post.content?.length || 500) / 200) + ' min read',
        comments: 0, // Default values for now
        likes: 0,
        views: 0,
        slug: post.slug
      }));
      console.log('Blog posts processed successfully');
    } else {
      console.log('No blog posts found in database');
    }
  } else {
    console.log('Database connection not available');
  }
} catch (err) {
  console.error('Error fetching blog posts:', err);
  error = err?.message || 'Unknown error';
  // Fallback to sample data for development
  blogPosts = [
    {
      id: '1',
      title: 'Welcome to My Blog Blog',
      excerpt: 'Get started with our blog to learn about smart money analytics and AI trading insights.',
      category: 'General',
      image: '/img/blog/default-cover.jpg',
      author: {
        name: 'Blog Author',
        avatar: '/img/team/default-avatar.jpg'
      },
      date: new Date().toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }),
      readTime: '2 min read',
      comments: 0,
      likes: 0,
      slug: 'welcome-to-blog-blog'
    }
  ];
}

// Current view mode (will be dynamic with JavaScript)
const viewMode = 'list';

// Create JSON-LD schema for blog
const blogSchema = {
  '@context': 'https://schema.org',
  '@type': 'Blog',
  name: 'My Blog Blog',
  description: 'Expert insights on DeFi, smart money tracking, AI trading strategies, and blockchain analytics from the My Blog team',
  url: 'https://example.ai/blog',
  publisher: {
    '@type': 'Organization',
    name: 'My Blog',
    logo: {
      '@type': 'ImageObject',
      url: 'https://example.ai/logo.svg'
    }
  },
  blogPost: blogPosts.slice(0, 5).map(post => ({
    '@type': 'BlogPosting',
    headline: post.title,
    description: post.excerpt,
    datePublished: post.date,
    author: {
      '@type': 'Person',
      name: post.author?.name || 'Blog Author'
    }
  }))
};
