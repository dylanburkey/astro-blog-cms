<script>
  // Generate table of contents
  document.addEventListener('DOMContentLoaded', () => {
    const content = document.querySelector('.article-content');
    const toc = document.getElementById('table-of-contents');
    
    if (content && toc) {
      const headings = content.querySelectorAll('h2, h3');
      
      headings.forEach((heading, index) => {
        // Skip empty headings
        const headingText = heading.textContent.trim();
        if (!headingText) return;
        
        // Add ID to heading if it doesn't have one
        if (!heading.id) {
          heading.id = `heading-${index}`;
        }
        
        // Create TOC link
        const link = document.createElement('a');
        link.href = `#${heading.id}`;
        link.textContent = headingText;
        link.setAttribute('data-level', heading.tagName === 'H2' ? '2' : '3');
        
        toc.appendChild(link);
        
        // Smooth scroll
        link.addEventListener('click', (e) => {
          e.preventDefault();
          heading.scrollIntoView({ behavior: 'smooth' });
        });
      });
      
      // Highlight active section on scroll
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          const id = entry.target.getAttribute('id');
          const link = toc.querySelector(`a[href="#${id}"]`);
          
          if (entry.intersectionRatio > 0) {
            toc.querySelectorAll('a').forEach(a => a.classList.remove('active'));
            link?.classList.add('active');
          }
        });
      }, { rootMargin: '-100px 0px -50% 0px' });
      
      headings.forEach(heading => {
        if (heading.textContent.trim()) {
          observer.observe(heading);
        }
      });
    }
  });

  // Copy to clipboard
  function copyToClipboard() {
    navigator.clipboard.writeText(window.location.href).then(() => {
      const btn = document.querySelector('.share-btn.copy');
      const originalHTML = btn.innerHTML;
      btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>';
      setTimeout(() => {
        btn.innerHTML = originalHTML;
      }, 2000);
    });
  }

  // Like functionality - Initialize after DOM is ready
  function initializeLikes() {
    const likeBtn = document.querySelector('.like-btn');
    if (!likeBtn) return;

    const postId = likeBtn.dataset.postId;
    const likeCount = likeBtn.querySelector('.like-count');
    
    // Check if already liked (from localStorage)
    const likedPosts = JSON.parse(localStorage.getItem('likedPosts') || '[]');
    if (likedPosts.includes(postId)) {
      likeBtn.classList.add('liked');
    }

    likeBtn.addEventListener('click', async () => {
      try {
        likeBtn.disabled = true;
        
        const response = await fetch('/api/blog/like.json', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ postId })
        });

        if (response.ok) {
          const data = await response.json();
          
          // Update UI
          likeCount.textContent = data.likes;
          
          if (data.liked) {
            likeBtn.classList.add('liked');
            // Add to localStorage
            const likedPosts = JSON.parse(localStorage.getItem('likedPosts') || '[]');
            if (!likedPosts.includes(postId)) {
              likedPosts.push(postId);
              localStorage.setItem('likedPosts', JSON.stringify(likedPosts));
            }
          } else {
            likeBtn.classList.remove('liked');
            // Remove from localStorage
            const likedPosts = JSON.parse(localStorage.getItem('likedPosts') || '[]');
            const index = likedPosts.indexOf(postId);
            if (index > -1) {
              likedPosts.splice(index, 1);
              localStorage.setItem('likedPosts', JSON.stringify(likedPosts));
            }
          }
          
          // Add animation
          likeBtn.style.transform = 'scale(1.2)';
          setTimeout(() => {
            likeBtn.style.transform = '';
          }, 200);
        }
      } catch (error) {
        console.error('Error toggling like:', error);
      } finally {
        likeBtn.disabled = false;
      }
    });
  }

  // Process blog content structure
  function processBlogContent() {
    const articleContent = document.querySelector('.article-content');
    if (!articleContent) return;

    // First, remove all inline font-size styles and normalize text
    const allElements = articleContent.querySelectorAll('*');
    allElements.forEach(el => {
      if (el.style.fontSize) {
        el.style.fontSize = '';
      }
    });

    // Process H2 tags to create sections
    const h2Tags = articleContent.querySelectorAll('h2');
    
    h2Tags.forEach(h2 => {
      // Add section-title class to H2
      h2.classList.add('section-title');
      
      // Remove any inline styles from H2
      h2.style = '';
      
      // Clean up nested spans with styles
      const spans = h2.querySelectorAll('span');
      spans.forEach(span => {
        if (span.style) {
          span.style = '';
        }
      });
      
      // Create a section element
      const section = document.createElement('section');
      section.className = 'content-section';
      section.style.marginTop = '1rem';
      
      // Insert section before H2
      h2.parentNode.insertBefore(section, h2);
      
      // Move H2 into section
      section.appendChild(h2);
      
      // Check for empty div immediately after H2 and remove it
      let nextSibling = h2.nextSibling;
      if (nextSibling && nextSibling.nodeName === 'DIV') {
        // Check if div only contains whitespace, br tags, or empty spans
        const textContent = nextSibling.textContent.trim();
        const hasOnlyBr = nextSibling.innerHTML.replace(/<br\s*\/?>/gi, '').replace(/<span[^>]*>\s*<\/span>/gi, '').trim() === '';
        if (!textContent || hasOnlyBr) {
          const toRemove = nextSibling;
          nextSibling = nextSibling.nextSibling;
          toRemove.remove();
        }
      }
      
      // Move all following siblings until next H2 into the section
      nextSibling = section.nextSibling;
      while (nextSibling && nextSibling.nodeName !== 'H2') {
        const toMove = nextSibling;
        nextSibling = nextSibling.nextSibling;
        section.appendChild(toMove);
      }
    });

    // Force list styles with JavaScript
    const lists = articleContent.querySelectorAll('ul, ol');
    lists.forEach(list => {
      // Force list styles
      list.style.listStylePosition = 'inside';
      list.style.paddingLeft = '0';
      list.style.margin = '1rem 0 1.5rem';
      
      if (list.tagName === 'UL') {
        list.style.listStyleType = 'disc';
      } else if (list.tagName === 'OL') {
        list.style.listStyleType = 'decimal';
      }
      
      // Style list items
      const items = list.querySelectorAll('li');
      items.forEach(item => {
        item.style.marginBottom = '0.5rem';
        item.style.paddingLeft = '0.5rem';
        item.style.display = 'list-item';
        item.style.listStylePosition = 'inside';
      });
    });

    // Set proper font sizes for all text elements
    const paragraphs = articleContent.querySelectorAll('p, div, span');
    paragraphs.forEach(el => {
      if (!el.closest('h1, h2, h3, h4, h5, h6')) {
        el.style.fontSize = '';  // Remove inline styles, let CSS handle it
      }
    });
  }

  // Call both functions when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      processBlogContent();
      initializeLikes();
    });
  } else {
    processBlogContent();
    initializeLikes();
  }
</script>