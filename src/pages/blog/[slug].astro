                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
              {post?.author_linkedin && (
                <a href={post.author_linkedin} target="_blank" rel="noopener noreferrer" class="social-link" title="LinkedIn">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
              )}
              {post?.author_website && (
                <a href={post.author_website} target="_blank" rel="noopener noreferrer" class="social-link" title="Website">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="2" y1="12" x2="22" y2="12"></line>
                    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      </header>
      
      <!-- Article Content -->
      <div class="article-layout container">
        <div class="article-wrapper">
          <div class="article-content" set:html={post?.content}></div>
          
          <!-- Engagement Section -->
          <div class="engagement-section">
            <div class="engagement-actions">
              <button class="like-btn" data-post-id={post?.id} aria-label="Like this post">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
                <span class="like-count">{post?.likes || 0}</span>
              </button>
              <span class="engagement-info">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
                <span>{post?.views || 0} views</span>
              </span>
            </div>
            <div class="engagement-share">
              <span>Enjoyed this article? Share it:</span>
              <div class="quick-share">
                <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post?.title)}&url=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener" aria-label="Share on Twitter">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                </a>
                <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener" aria-label="Share on LinkedIn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"></path>
                    <circle cx="4" cy="4" r="2"></circle>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Sidebar -->
        <aside class="article-sidebar">
          <!-- Share Buttons -->
          <div class="share-section">
            <h3>Share Article</h3>
            <div class="share-buttons">
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post?.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn twitter"
                title="Share on Twitter"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
                </svg>
              </a>
              
              <a 
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn linkedin"
                title="Share on LinkedIn"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"></path>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
              </a>
              
              <a 
                href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn facebook"
                title="Share on Facebook"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
                </svg>
              </a>
              
              <button 
                class="share-btn copy"
                onclick="copyToClipboard()"
                title="Copy link"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                  <path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Tags -->
          {post?.tags?.length > 0 && (
            <div class="tags-section">
              <h3>Tags</h3>
              <div class="tag-list">
                {post.tags.map(tag => (
                  <a href={`/blog/tag/${tag.slug}`} class="tag-link">
                    #{tag.name}
                  </a>
                ))}
              </div>
            </div>
          )}
          
          <!-- Table of Contents -->
          <div class="toc-section">
            <h3>Table of Contents</h3>
            <nav id="table-of-contents" class="toc-nav"></nav>
          </div>
        </aside>
      </div>
      
      <!-- Comments Section -->
      <section class="comments-section container">
        <BlogComments postId={post?.id} />
      </section>

      <!-- CTA Section -->
      <section class="cta-section container">
        <div class="cta-wrapper">
          <div class="cta-content">
            <h2>Get Smart Money Insights</h2>
            <p>Join thousands of traders receiving daily AI-powered market analysis and trading signals.</p>
            <div class="cta-buttons">
              <a href="/smart-money/dashboard" class="btn btn-primary">
                View Dashboard
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14m-7-7l7 7-7 7"/>
                </svg>
              </a>
              <a href="/tokenomics" class="btn btn-secondary">
                Learn About $BLOG
              </a>
            </div>
          </div>
          <div class="cta-graphic">
            <svg width="200" height="200" viewBox="0 0 200 200" fill="none">
              <circle cx="100" cy="100" r="80" stroke="var(--color-primary)" stroke-width="2" opacity="0.2"/>
              <circle cx="100" cy="100" r="60" stroke="var(--color-primary)" stroke-width="2" opacity="0.3"/>
              <circle cx="100" cy="100" r="40" stroke="var(--color-primary)" stroke-width="2" opacity="0.4"/>
              <circle cx="100" cy="100" r="20" fill="var(--color-primary)" opacity="0.6"/>
            </svg>
          </div>
        </div>
      </section>

      <!-- Related Posts -->
      {relatedPosts.length > 0 && (
        <section class="related-posts container">
          <h2>Related Articles</h2>
          <div class="related-grid">
            {relatedPosts.map(related => (
              <article class="related-card">
                {related.cover_image && (
                  <a href={`/blog/${related.slug}`} class="related-image">
                    <img src={related.cover_image} alt={related.title} />
                  </a>
                )}
                <div class="related-content">
                  <h3>
                    <a href={`/blog/${related.slug}`}>{related.title}</a>
                  </h3>
                  {related.excerpt && (
                    <p>{related.excerpt}</p>
                  )}
                  <time datetime={related.published_at}>
                    {formatDate(related.published_at)}
                  </time>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}
    </article>
    )}
  </main>
</Layout>

<style>
