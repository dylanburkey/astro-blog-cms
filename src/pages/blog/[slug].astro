    border-radius: var(--radius-full);
    font-size: 0.813rem;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .category-badge:hover {
    background: var(--color-primary);
    color: white;
  }

  .meta-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .meta-separator {
    opacity: 0.5;
  }

  .article-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.2;
    margin: 1rem 0;
  }

  .article-excerpt {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 1rem 0 2rem;
  }

  /* Author Info */
  .author-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    border-top: 1px solid var(--color-border);
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-details {
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  
  .author-social {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }
  
  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: var(--radius-sm);
    background: var(--color-background);
    color: var(--color-text-muted);
    transition: all var(--transition-base);
  }
  
  .social-link:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  .author-name {
    font-weight: 600;
    color: var(--color-text);
  }

  .author-bio {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  /* Article Layout */
  .article-layout {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 3rem;
    margin-bottom: 4rem;
  }
  
  /* Ensure proper order on desktop */
  .article-wrapper {
    order: 1;
  }
  
  .article-sidebar {
    order: 2;
  }

  .article-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* Article Content */
  .article-content {
    font-size: 1rem;  /* 16px base font size */
    line-height: 1.8;
    color: var(--color-text);
    padding: 0 1.5rem;
  }
  
  /* Content sections created by JavaScript */
  .article-content .content-section {
    margin: 1rem 0 3rem;
    padding: 0;
  }
  
  .article-content .content-section:first-child {
    margin-top: 0;
  }
  
  /* Ensure all body text is 1rem */
  .article-content p,
  .article-content div:not(.content-section),
  .article-content span,
  .article-content li {
    font-size: 1rem !important;
    line-height: 1.8;
  }

  /* H2 tags with section-title class */
  .article-content h2.section-title,
  .article-content .section-title {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
    font-size: var(--text-3xl) !important;
    font-weight: 700 !important;
    line-height: 1.2 !important;
    letter-spacing: -0.017em !important;
    color: var(--color-text) !important;
    text-transform: capitalize !important;
    margin: 0 0 1.5rem !important;
    padding: 0 !important;
    border: none !important;
  }
  
  /* Add visual separator to content sections (not first one) */
  .article-content .content-section:not(:first-child) {
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  /* Override inline styles on h2 span children */
  .article-content h2 span,
  .article-content .section-title span {
    font-size: inherit !important;
    font-family: inherit !important;
    font-weight: inherit !important;
    line-height: inherit !important;
    color: inherit !important;
    display: inline !important;
  }
  
  /* Legacy H2 styles for backwards compatibility */
  .article-content h2:not(.section-title) {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
    font-size: var(--text-3xl) !important;
    font-weight: 700 !important;
    line-height: 1.2 !important;
    letter-spacing: -0.017em !important;
    color: var(--color-text) !important;
    text-transform: capitalize !important;
    margin: 3rem 0 1.5rem !important;
  }

  .article-content h3,
  .article-content h3[style] {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
    font-size: var(--text-2xl) !important;
    font-weight: 600 !important;
    line-height: 1.3 !important;
    letter-spacing: -0.009em !important;
    color: var(--color-text) !important;
    text-transform: capitalize !important;
    margin: 2rem 0 1rem !important;
  }

  .article-content h4,
  .article-content h4[style] {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
    font-size: var(--text-xl) !important;
    font-weight: 500 !important;
    line-height: 1.4 !important;
    color: var(--color-text) !important;
    text-transform: capitalize !important;
    margin: 1.5rem 0 0.75rem !important;
  }

  .article-content h5,
  .article-content h5[style] {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
    font-size: var(--text-lg) !important;
    font-weight: 500 !important;
    line-height: 1.5 !important;
    color: var(--color-text) !important;
    margin: 1.25rem 0 0.5rem !important;
  }

  .article-content h6,
  .article-content h6[style] {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
    font-size: var(--text-base) !important;
    font-weight: 500 !important;
    line-height: 1.5 !important;
    color: var(--color-text) !important;
    margin: 1rem 0 0.5rem !important;
  }

  /* Override inline styles on all heading span children */
  .article-content h3 span[style],
  .article-content h4 span[style],
  .article-content h5 span[style],
  .article-content h6 span[style] {
    font-size: inherit !important;
    font-family: inherit !important;
    font-weight: inherit !important;
    line-height: inherit !important;
    color: inherit !important;
  }

  .article-content p {
    margin-bottom: 1.5rem;
    font-size: 1rem !important;
    line-height: 1.8;
  }

  /* List styles for blog content - with higher specificity */
  .article-content ul,
  .article-content div ul,
  .article-wrapper .article-content ul {
    margin: 1rem 0 1.5rem !important;
    padding-left: 0 !important;
    list-style-type: disc !important;
    list-style-position: inside !important;
  }

  .article-content ol,
  .article-content div ol,
  .article-wrapper .article-content ol {
    margin: 1rem 0 1.5rem !important;
    padding-left: 0 !important;
    list-style-type: decimal !important;
    list-style-position: inside !important;
  }

  .article-content ul li,
  .article-content ol li,
  .article-content div ul li,
  .article-content div ol li {
    margin-bottom: 0.5rem !important;
    line-height: 1.7 !important;
    display: list-item !important;
    padding-left: 0.5rem !important;
    list-style-position: inside !important;
  }

  /* Nested lists */
  .article-content ul ul {
    list-style-type: circle;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .article-content ol ol {
    list-style-type: lower-alpha;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  /* Third level lists */
  .article-content ul ul ul {
    list-style-type: square;
  }

  .article-content ol ol ol {
    list-style-type: lower-roman;
  }

  /* Nested list spacing */
  .article-content li > ul,
  .article-content li > ol {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  /* Force list styles even with inline styles */
  .article-content div ul,
  .article-content div ol {
    list-style: revert !important;
    padding-left: 2.5rem !important;
  }

  .article-content div ul li {
    list-style-type: disc !important;
    display: list-item !important;
  }

  .article-content div ol li {
    list-style-type: decimal !important;
    display: list-item !important;
  }

  /* Handle spans inside list items */
  .article-content li > span,
  .article-content li span {
    display: inline;
  }

  /* Ensure list markers show */
  .article-content li::marker {
    content: normal !important;
    unicode-bidi: isolate !important;
  }

  .article-content blockquote {
    margin: 2rem 0;
    padding: 1.5rem;
    border-left: 4px solid var(--color-primary);
    background: var(--color-surface);
    font-style: italic;
  }

  .article-content pre {
    margin: 2rem 0;
    padding: 1.5rem;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    overflow-x: auto;
  }

  .article-content code {
    font-family: 'Source Code Pro', monospace;
    font-size: 0.875rem;
    background: var(--color-surface);
    padding: 0.125rem 0.375rem;
    border-radius: var(--radius-sm);
  }

  .article-content pre code {
    background: none;
    padding: 0;
  }

  .article-content img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    margin: 2rem 0;
  }

  .article-content a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .article-content a:hover {
    color: var(--color-primary-dark);
  }

  /* Engagement Section */
  .engagement-section {
    margin-top: 3rem;
    padding: 1.5rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1.5rem;
  }

  .engagement-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .like-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-surface);
    border: 2px solid var(--color-accent);
    border-radius: var(--radius-md);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-accent);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .like-btn svg {
    stroke: var(--color-accent);
  }

  .like-btn:hover:not(:disabled) {
    border-color: var(--color-accent);
    color: var(--color-surface);
    background: var(--color-accent);
  }

  .like-btn:hover:not(:disabled) svg {
    stroke: var(--color-surface);
  }

  .like-btn.liked {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-surface);
  }

  .like-btn.liked svg {
    fill: var(--color-surface);
    stroke: var(--color-surface);
  }

  .like-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .like-btn svg {
    width: 18px;
    height: 18px;
  }

  .engagement-info {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .engagement-info svg {
    width: 16px;
    height: 16px;
  }

  .engagement-share {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .quick-share {
    display: flex;
    gap: 0.5rem;
  }

  .quick-share a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
    transition: all var(--transition-base);
  }

  .quick-share a:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
    transform: translateY(-1px);
  }

  .quick-share svg {
    width: 16px;
    height: 16px;
  }

  @media (max-width: 640px) {
    .engagement-section {
      flex-direction: column;
      align-items: flex-start;
    }

    .engagement-share {
      width: 100%;
      justify-content: space-between;
    }
  }

  /* Sidebar */
  .article-sidebar {
    position: sticky;
    top: 100px;
    height: fit-content;
  }

  .share-section,
  .tags-section,
  .toc-section {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .share-section h3,
  .tags-section h3,
  .toc-section h3 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin: 0 0 1rem;
  }

  .share-buttons {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }

  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-background);
    color: var(--color-text);
    text-decoration: none;
    transition: all var(--transition-base);
    cursor: pointer;
  }

  .share-btn:hover {
    transform: translateY(-2px);
  }

  .share-btn.twitter:hover {
    background: #1DA1F2;
    border-color: #1DA1F2;
    color: white;
  }

  .share-btn.linkedin:hover {
    background: #0077B5;
    border-color: #0077B5;
    color: white;
  }

  .share-btn.facebook:hover {
    background: #1877F2;
    border-color: #1877F2;
    color: white;
  }

  .share-btn.copy:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-link {
    padding: 0.25rem 0.75rem;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text);
    font-size: 0.813rem;
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .tag-link:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }

  /* Table of Contents styles */
  .toc-section {
    position: sticky;
    top: 2rem;
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
  }

  .toc-section h3 {
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .toc-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;  /* Increased spacing between items */
  }

  .toc-nav a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.875rem;
    padding: 0.625rem 0.75rem;  /* Increased vertical padding */
    border-left: 2px solid var(--color-border);
    padding-left: 1rem;
    transition: all var(--transition-base);
    position: relative;
    display: block;
    line-height: 1.4;
  }

  /* Indent nested TOC items */
  .toc-nav a[data-level="2"] {
    padding-left: 1rem;
  }

  .toc-nav a[data-level="3"] {
    padding-left: 2rem;
    font-size: 0.813rem;
  }

  .toc-nav a[data-level="4"] {
    padding-left: 3rem;
    font-size: 0.813rem;
  }

  /* Hover effect with underline */
  .toc-nav a:hover {
    color: var(--color-text);
    background: var(--color-surface);
    border-left-color: var(--color-primary-light);
    text-decoration: underline;
    text-decoration-color: var(--color-primary);
    text-underline-offset: 3px;
  }

  .toc-nav a.active {
    color: var(--color-primary);
    border-left-color: var(--color-primary);
    background: var(--color-primary-alpha-10);
    font-weight: 500;
  }

  /* Remove underline from active state to avoid double emphasis */
  .toc-nav a.active:hover {
    text-decoration: none;
  }

  /* Smooth scrolling indicator */
  .toc-nav a::before {
    content: '';
    position: absolute;
    left: -2px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-primary);
    transform: scaleY(0);
    transition: transform var(--transition-base);
  }

  .toc-nav a.active::before {
    transform: scaleY(1);
  }

  /* Comments Section */
  .comments-section {
    padding: 3rem 0;
    border-top: 1px solid var(--color-border);
  }

  /* CTA Section */
  .cta-section {
    padding: 4rem 0;
    margin: 3rem 0;
  }

  .cta-wrapper {
    background: linear-gradient(135deg, var(--color-primary-alpha-10), var(--color-secondary-alpha-10));
    border: 1px solid var(--color-border);
    border-radius: var(--radius-2xl);
    padding: 3rem;
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 3rem;
    align-items: center;
  }

  .cta-content h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .cta-content p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
    border: 2px solid var(--color-primary);
  }

  .btn-primary:hover {
    background: var(--color-primary-dark);
    border-color: var(--color-primary-dark);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  .btn-secondary:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  .cta-graphic {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Related Posts */
  .related-posts {
    padding: 3rem 0;
    border-top: 1px solid var(--color-border);
  }

  .related-posts h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .related-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  .related-image {
    display: block;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .related-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .related-card:hover .related-image img {
    transform: scale(1.05);
  }

  .related-content {
    padding: 1.5rem;
  }

  .related-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
  }

  .related-content h3 a {
    color: var(--color-text);
    text-decoration: none;
  }

  .related-content h3 a:hover {
    color: var(--color-primary);
  }

  .related-content p {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.6;
    margin: 0 0 0.75rem;
  }

  .related-content time {
    color: var(--color-text-muted);
    font-size: 0.813rem;
  }

  /* Error Container */
  .error-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 4rem 2rem;
    text-align: center;
  }

  .error-container h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .error-container p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .error-details {
    font-size: 0.875rem;
    font-family: 'Source Code Pro', monospace;
    background: var(--color-surface);
    padding: 1rem;
    border-radius: var(--radius-md);
    margin: 2rem 0;
  }

  .btn-back {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    transition: all var(--transition-base);
  }

  .btn-back:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .article-layout {
      grid-template-columns: 1fr;
    }

    .article-sidebar {
      position: static;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .toc-section {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    /* Container adjustments */
    .container {
      padding: 0 1rem;
    }

    /* Article layout for mobile - TOC first */
    .article-layout {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      padding: 1rem 0;
    }
    
    /* Mobile: TOC/sidebar above article */
    .article-sidebar {
      order: 1;
      position: relative;
      top: auto;
    }
    
    .article-wrapper {
      order: 2;
    }
    
