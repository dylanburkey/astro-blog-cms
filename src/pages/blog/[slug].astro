    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Breadcrumb */
  .breadcrumb {
    margin-bottom: var(--space-lg);
    padding-top: var(--space-lg);
  }

  .breadcrumb-list {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 0.5rem;
    font-size: 0.875rem;
    flex-wrap: wrap;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
  }

  .breadcrumb-item:not(:last-child)::after {
    content: '/';
    margin: 0 0.5rem;
    color: var(--color-text-muted);
  }

  .breadcrumb-item a {
    color: var(--color-text-muted);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    transition: color 0.2s ease;
  }

  .breadcrumb-item a:hover {
    color: var(--color-primary);
  }

  .breadcrumb-icon {
    width: 18px;
    height: 18px;
  }

  .breadcrumb-item .current {
    color: var(--color-text);
    font-weight: 500;
    max-width: 300px;
