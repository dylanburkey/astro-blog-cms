---
import Layout from '../../layouts/Layout.astro';
import SEO from '../../components/SEO.astro';
import BlogSidebar from '../../components/BlogSidebar.astro';
import BlogComments from '../../components/BlogComments.astro';

// Get the slug from the URL
const { slug } = Astro.params;

// Fetch the blog post
let post = null;
let relatedPosts = [];
let error = null;

try {
  const db = Astro.locals.runtime?.env?.DB;
  
  if (!db) {
    console.error('Database not available');
    error = 'Database connection error';
  } else {
    // Get the blog post with author info
    const result = await db.prepare(`
      SELECT 
        p.*,
        u.username as author_name,
        u.avatar as author_avatar,
        u.bio as author_bio,
        u.twitter_url as author_twitter,
        u.github_url as author_github,
        u.linkedin_url as author_linkedin,
        u.website_url as author_website
      FROM blog_posts p
      LEFT JOIN admin_users u ON p.author_id = u.id
      WHERE p.slug = ? AND p.status = 'published'
    `).bind(slug).first();
    
    if (!result) {
      console.error('Post not found:', slug);
      error = 'Post not found';
    } else {
      post = result;
      
      // Track view
      await db.prepare(`
    INSERT INTO blog_views (post_id, ip_address, user_agent, referrer)
    VALUES (?, ?, ?, ?)
  `).bind(
    post.id,
    Astro.clientAddress || 'unknown',
    Astro.request.headers.get('user-agent') || 'unknown',
    Astro.request.headers.get('referer') || null
      ).run();
      
      // Get categories
      const categoriesResult = await db.prepare(`
    SELECT c.*
    FROM blog_categories c
    JOIN blog_post_categories pc ON c.id = pc.category_id
    WHERE pc.post_id = ?
      `).bind(post.id).all();
      post.categories = categoriesResult.results || [];
      
      // Get tags
      const tagsResult = await db.prepare(`
    SELECT t.*
    FROM blog_tags t
    JOIN blog_post_tags pt ON t.id = pt.tag_id
    WHERE pt.post_id = ?
      `).bind(post.id).all();
      post.tags = tagsResult.results || [];
      
      // Get related posts
      const relatedResult = await db.prepare(`
    SELECT DISTINCT p.*, COUNT(pc2.category_id) as common_categories
    FROM blog_posts p
    JOIN blog_post_categories pc1 ON p.id = pc1.post_id
    JOIN blog_post_categories pc2 ON pc1.category_id = pc2.category_id
    WHERE pc2.post_id = ? AND p.id != ? AND p.status = 'published'
    GROUP BY p.id
    ORDER BY common_categories DESC, p.published_at DESC
    LIMIT 3
      `).bind(post.id, post.id).all();
      relatedPosts = relatedResult.results || [];
    }
  }
} catch (err) {
  console.error('Error fetching blog post:', err);
  error = err.message;
}

// Generate JSON-LD schema
const jsonLd = post ? {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.title,
  "alternativeHeadline": post.meta_title,
  "description": post.excerpt || post.meta_description,
  "image": post.cover_image ? (post.cover_image.startsWith('http') ? post.cover_image : `${Astro.url.origin}${post.cover_image}`) : undefined,
  "datePublished": post.published_at,
  "dateModified": post.updated_at || post.published_at,
  "author": {
    "@type": "Person",
    "name": post.author_name || "My Blog Team",
    "url": post.author_website || `${Astro.url.origin}/team`,
    "sameAs": [
      post.author_twitter,
      post.author_github,
      post.author_linkedin
    ].filter(Boolean)
  },
  "publisher": {
    "@type": "Organization",
    "name": "My Blog",
    "logo": {
      "@type": "ImageObject",
      "url": `${Astro.url.origin}/img/blog-brand/blog-logo.png`,
      "width": 200,
      "height": 60
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `${Astro.url.origin}/blog/${slug}`
  },
  "keywords": post.meta_keywords || post.tags?.map(t => t.name).join(', '),
  "articleSection": post.categories?.map(c => c.name).join(', '),
  "articleBody": post.content?.replace(/<[^>]*>/g, '').substring(0, 1000),
  "wordCount": post.content?.replace(/<[^>]*>/g, '').split(/\s+/).length,
  "url": `${Astro.url.origin}/blog/${slug}`,
  "inLanguage": "en-US",
  "potentialAction": {
    "@type": "ReadAction",
    "target": `${Astro.url.origin}/blog/${slug}`
  }
} : null;

// Format date
const formatDate = (dateString) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
};

// Calculate read time
const calculateReadTime = (content) => {
  const wordsPerMinute = 200;
  const text = content.replace(/<[^>]*>/g, '');
  const wordCount = text.split(/\s+/).length;
  const readTime = Math.ceil(wordCount / wordsPerMinute);
  return readTime;
};
---

<Layout 
  title={post?.meta_title || post?.title || 'Blog Post'}
  description={post?.meta_description || post?.excerpt || 'Read our latest blog post'}
  keywords={post?.meta_keywords}
  ogImage={post?.cover_image}
  ogType="article"
  canonicalUrl={`${Astro.url.origin}/blog/${slug}`}
>
  <SEO
    slot="head"
    title={post ? `${post.title} | My Blog Blog` : 'Blog Post Not Found'}
    description={post ? (post.excerpt || post.content?.substring(0, 160).replace(/<[^>]*>/g, '')) : 'The requested blog post could not be found.'}
    type="article"
    image={post?.featured_image || post?.cover_image || '/og-image.png'}
    publishedTime={post?.created_at}
    modifiedTime={post?.updated_at}
    author={post?.author_name || 'My Blog Team'}
    section="Cryptocurrency"
    tags={post?.tags ? post.tags.split(',').map(t => t.trim()) : []}
    jsonLd={post ? {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": post.title,
      "description": post.excerpt || post.content?.substring(0, 160).replace(/<[^>]*>/g, ''),
      "image": post.featured_image || post.cover_image || '/og-image.png',
      "datePublished": post.created_at,
      "dateModified": post.updated_at || post.created_at,
      "author": {
        "@type": "Person",
        "name": post.author_name || 'My Blog Team',
        "url": post.author_website
      },
      "publisher": {
        "@type": "Organization",
        "name": "My Blog",
        "logo": {
          "@type": "ImageObject",
          "url": "https://example.ai/logo.svg"
        }
      },
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": `https://example.ai/blog/${slug}`
      },
      "articleBody": post.content,
      "wordCount": post.content?.split(' ').length,
      "keywords": post.tags
    } : null}
  />
  {post && <script type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>}
  
  <main class="blog-post-page">
    {!post ? (
      <div class="error-container">
        <h1>Post Not Found</h1>
        <p>Sorry, the blog post you're looking for doesn't exist or hasn't been published yet.</p>
        <p class="error-details">Error: {error || 'Unknown error'}</p>
        <a href="/blog" class="btn-back">← Back to Blog</a>
      </div>
    ) : (
    <article class="blog-article">
      <!-- Hero Section -->
      {post?.cover_image && (
        <div class="article-hero">
          <img 
            src={post.cover_image} 
            alt={post.cover_image_alt || post.title}
            class="hero-image"
          />
        </div>
      )}
      
      <!-- Article Header -->
      <header class="article-header container">
        <!-- Breadcrumb -->
        <nav class="breadcrumb" aria-label="breadcrumb">
          <ol class="breadcrumb-list">
            <li class="breadcrumb-item">
              <a href="/">
