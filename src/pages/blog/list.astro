---
import Layout from '../../layouts/Layout.astro';
import BlogSidebar from '../../components/BlogSidebar.astro';

// Fetch blog posts from database
let blogPosts = [];
let error = null;

try {
  const db = Astro.locals.runtime?.env?.DB;
  if (db) {
    const result = await db.prepare(`
      SELECT 
        p.*,
        u.username as author_name,
        u.avatar as author_avatar,
        GROUP_CONCAT(DISTINCT c.name) as categories,
        COALESCE(e.views, 0) as views,
        COALESCE(e.likes, 0) as likes,
        (SELECT COUNT(*) FROM blog_comments WHERE post_id = p.id AND is_approved = 1) as comment_count
      FROM blog_posts p
      LEFT JOIN admin_users u ON p.author_id = u.id
      LEFT JOIN blog_post_categories pc ON p.id = pc.post_id
      LEFT JOIN blog_categories c ON pc.category_id = c.id
      LEFT JOIN blog_post_engagement e ON p.id = e.post_id
      WHERE p.status = 'published'
      GROUP BY p.id
      ORDER BY p.published_at DESC
      LIMIT 20
    `).all();
    
    blogPosts = result.results?.map(post => ({
      id: post.id,
      title: post.title,
      excerpt: post.excerpt || post.content?.substring(0, 200) + '...',
      category: post.categories?.split(',')[0] || 'General',
      image: post.cover_image || '/img/blog/default-cover.jpg',
      author: {
        name: post.author_name || 'Blog Author',
        avatar: post.author_avatar || '/img/team/default-avatar.jpg'
      },
      date: new Date(post.published_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }),
      readTime: Math.ceil((post.content?.length || 0) / 1000) + ' min read',
      comments: post.comment_count || 0,
      likes: post.likes || 0,
      views: post.views || 0,
      slug: post.slug
    })) || [];
  }
} catch (err) {
  console.error('Error fetching blog posts:', err);
  error = err.message;
  // Fallback to sample data for development
  blogPosts = [
    {
      id: '1',
      title: 'Welcome to My Blog Blog',
      excerpt: 'Get started with our blog to learn about smart money analytics and AI trading insights.',
      category: 'General',
      image: '/img/blog/default-cover.jpg',
      author: {
        name: 'Blog Author',
        avatar: '/img/team/default-avatar.jpg'
      },
      date: new Date().toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }),
      readTime: '2 min read',
      comments: 0,
      likes: 0,
      slug: 'welcome-to-blog-blog'
    }
  ];
}

// Current view mode (will be dynamic with JavaScript)
const viewMode = 'list';
---

<Layout title="Blog - My Blog">
  <!-- Hero Section -->
  <section class="blog-hero">
    <div class="container">
      <!-- Breadcrumb -->
      <nav class="breadcrumb" aria-label="breadcrumb">
        <ol class="breadcrumb-list">
          <li class="breadcrumb-item">
            <a href="/">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="breadcrumb-icon">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
              </svg>
              Home
            </a>
          </li>
          <li class="breadcrumb-item">
            <span class="current">Blog</span>
          </li>
        </ol>
      </nav>
      <h1 class="hero-title">Blog & Insights</h1>
      <p class="hero-description">
        Stay updated with the latest in smart money analytics, AI trading insights, and market trends
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="blog-content">
    <div class="container">
      <div class="content-wrapper">
        <!-- Main Column -->
        <div class="main-column">
          <!-- View Switcher -->
          <div class="view-controls">
            <div class="results-info">
              Showing {blogPosts.length} articles
            </div>
            <div class="view-switcher">
              <button 
                class="view-btn active" 
                data-view="list"
                aria-label="List view"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="8" y1="6" x2="21" y2="6"></line>
                  <line x1="8" y1="12" x2="21" y2="12"></line>
                  <line x1="8" y1="18" x2="21" y2="18"></line>
                  <line x1="3" y1="6" x2="3.01" y2="6"></line>
                  <line x1="3" y1="12" x2="3.01" y2="12"></line>
                  <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
              </button>
              <button 
                class="view-btn" 
                data-view="grid"
                aria-label="Grid view"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="7" height="7"></rect>
                  <rect x="14" y="3" width="7" height="7"></rect>
                  <rect x="14" y="14" width="7" height="7"></rect>
                  <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
              </button>
            </div>
          </div>

          <!-- Blog Posts List -->
          <div class="posts-container" data-view="list">
            {blogPosts.map((post) => (
              <article class="post-card post-card-list">
                {post.image ? (
                  <div class="post-image-wrapper">
                    <a href={`/blog/${post.slug}`} class="post-image-link">
                      <img src={post.image} alt={post.title} class="post-image" loading="lazy" />
                    </a>
                    <button class="bookmark-btn" aria-label="Save for later">
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                      </svg>
                    </button>
                  </div>
                ) : (
                  <div class="post-no-image">
                    <div class="post-no-image-placeholder">
                      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" opacity="0.3">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <polyline points="21 15 16 10 5 21"></polyline>
                      </svg>
                    </div>
                  </div>
                )}
                <div class="post-content">
                  <div class="post-header">
                    <a href={`/blog/category/${post.category.toLowerCase().replace(/\s+/g, '-')}`} class="post-category">
                      {post.category}
                    </a>
                    <div class="post-meta">
                      <time class="post-date">{post.date}</time>
                      <span class="meta-separator">Â·</span>
                      <span class="post-read-time">{post.readTime}</span>
                    </div>
                  </div>
                  <h2 class="post-title">
                    <a href={`/blog/${post.slug}`}>{post.title}</a>
                  </h2>
                  <p class="post-excerpt">{post.excerpt}</p>
                  <div class="post-footer">
                    <div class="post-author">
                      <img src={post.author.avatar} alt={post.author.name} class="author-avatar" />
                      <span class="author-name">{post.author.name}</span>
                    </div>
                    <div class="post-stats">
                      <span class="stat-item">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                        </svg>
                        {post.comments}
                      </span>
                      <span class="stat-item">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
                        </svg>
                        {post.likes}
                      </span>
                    </div>
                  </div>
                </div>
              </article>
            ))}
          </div>

          <!-- Load More Button -->
          <div class="load-more-wrapper">
            <button class="load-more-btn">
              Show More Articles
            </button>
          </div>
        </div>

        <!-- Sidebar -->
        <BlogSidebar />
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .blog-hero {
    background: linear-gradient(180deg,
      var(--color-background) 0%,
      rgba(0, 212, 255, 0.05) 50%,
      var(--color-background) 100%
