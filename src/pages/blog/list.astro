    -webkit-line-clamp: 2;
  }

  .posts-container[data-view="grid"] .post-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-sm);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .content-wrapper {
      grid-template-columns: 1fr;
    }

    .posts-container[data-view="grid"] {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 1.75rem;
    }

    .post-card-list {
      flex-direction: column;
    }

    .post-image-wrapper {
      width: 100%;
      height: 200px;
    }

    .post-no-image {
      width: 100%;
      height: 200px;
    }

    .posts-container[data-view="grid"] {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .container {
      padding: 0 var(--space-md);
    }

    .view-controls {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }

    .post-footer {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }
  }

  /* Dark theme adjustments */
  [data-theme="dark"] .post-card {
    background: var(--color-surface);
  }

  [data-theme="dark"] .view-switcher {
    background: var(--color-surface-light);
  }

  [data-theme="dark"] .view-btn.active {
    background: var(--color-surface);
  }

  [data-theme="dark"] .bookmark-btn {
    background: var(--color-surface);
    color: var(--color-text);
  }

  [data-theme="dark"] .bookmark-btn:hover {
    background: var(--color-primary);
    color: white;
  }

  [data-theme="dark"] .load-more-btn {
    background: var(--color-surface);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const viewBtns = document.querySelectorAll('.view-btn');
    const postsContainer = document.querySelector('.posts-container');
    
    // Handle view switching
    viewBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const view = btn.dataset.view;
        
        // Update active button
        viewBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Update container view
        if (postsContainer) {
          postsContainer.dataset.view = view;
          
          // Update post card classes
          const postCards = postsContainer.querySelectorAll('.post-card');
          postCards.forEach(card => {
            if (view === 'grid') {
              card.classList.remove('post-card-list');
              card.classList.add('post-card-grid');
            } else {
              card.classList.remove('post-card-grid');
              card.classList.add('post-card-list');
            }
          });
        }
      });
    });
    
    // Handle bookmark buttons
    const bookmarkBtns = document.querySelectorAll('.bookmark-btn');
    bookmarkBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        btn.classList.toggle('bookmarked');
        const svg = btn.querySelector('svg');
        if (btn.classList.contains('bookmarked')) {
          svg?.setAttribute('fill', 'currentColor');
        } else {
          svg?.setAttribute('fill', 'none');
        }
      });
    });
    
