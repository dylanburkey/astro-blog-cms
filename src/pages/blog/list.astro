    color: white;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .meta-separator {
    opacity: 0.5;
  }

  .post-title {
    font-size: var(--text-xl);
    font-weight: 700;
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .post-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .post-title a:hover {
