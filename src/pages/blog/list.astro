  .hero-description {
    font-family: 'Karla', system-ui, -apple-system, sans-serif;
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.4;
    max-width: 600px;
  }

  /* Main Content */
  .blog-content {
    padding: var(--space-3xl) 0;
  }

