---
export interface BlogPost {
  id: string;
  title: string;
  excerpt?: string;
  category: string;
  timeAgo: string;
  image: string;
  author: {
    name: string;
    role: string;
    avatar: string;
  };
  stats?: {
    likes: number;
    comments: number;
    shares: number;
  };
  href: string;
}

// Fetch latest blog posts from database
let blogPosts: BlogPost[] = [];

try {
  const db = Astro.locals.runtime?.env?.DB;
  if (db) {
    const result = await db.prepare(`
      SELECT 
        p.*,
        u.username as author_name,
        u.role as author_role,
        u.avatar as author_avatar,
        GROUP_CONCAT(DISTINCT c.name) as categories
      FROM blog_posts p
      LEFT JOIN admin_users u ON p.author_id = u.id
      LEFT JOIN blog_post_categories pc ON p.id = pc.post_id
      LEFT JOIN blog_categories c ON pc.category_id = c.id
      WHERE p.status = 'published' AND p.featured = 1
      GROUP BY p.id
      ORDER BY p.published_at DESC
      LIMIT 3
    `).all();
    
    // Helper function to calculate time ago
    const getTimeAgo = (date: string) => {
      const now = new Date();
      const then = new Date(date);
      const diffMs = now.getTime() - then.getTime();
      const diffSecs = Math.floor(diffMs / 1000);
      const diffMins = Math.floor(diffSecs / 60);
      const diffHours = Math.floor(diffMins / 60);
      const diffDays = Math.floor(diffHours / 24);
      
      if (diffDays > 30) {
        return then.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
      } else if (diffDays > 0) {
        return diffDays === 1 ? '1 day ago' : `${diffDays} days ago`;
      } else if (diffHours > 0) {
        return diffHours === 1 ? '1 hour ago' : `${diffHours} hours ago`;
      } else if (diffMins > 0) {
        return diffMins === 1 ? '1 minute ago' : `${diffMins} minutes ago`;
      } else {
        return 'Just now';
      }
    };
    
    blogPosts = result.results?.map((post, index) => ({
      id: post.id.toString(),
      title: post.title,
      excerpt: post.excerpt,
      category: post.categories?.split(',')[0] || 'General',
      timeAgo: getTimeAgo(post.published_at),
      image: post.cover_image || '/img/blog/default-cover.jpg',
      author: {
        name: post.author_name || 'Blog Author',
        role: post.author_role || 'Team Member',
        avatar: post.author_avatar || `https://ui-avatars.com/api/?name=${encodeURIComponent(post.author_name || 'Blog Author')}&background=6366f1&color=fff&size=200&bold=true`
      },
      stats: index > 0 ? {
        likes: Math.floor(Math.random() * 20),
        comments: Math.floor(Math.random() * 15),
        shares: Math.floor(Math.random() * 10)
      } : undefined,
      href: `/blog/${post.slug}`
    })) || [];
  }
} catch (err) {
  console.error('Error fetching featured blog posts:', err);
}

// Fallback to sample data if no posts found
if (blogPosts.length === 0) {
  blogPosts = [
    {
      id: '1',
      title: 'Understanding Smart Money Flow in Crypto Derivatives Markets',
      excerpt: 'Dive deep into how institutional traders move markets and learn to identify smart money patterns in real-time crypto derivatives trading.',
      category: 'Market Analysis',
      timeAgo: '12 hours ago',
      image: '/img/blog/bludex-in-vegas.jpg',
      author: {
        name: 'Bludex',
        role: 'Market Analyst',
        avatar: 'https://ui-avatars.com/api/?name=Bludex&background=6366f1&color=fff&size=200&bold=true'
      },
      href: '/blog/smart-money-flow'
    },
    {
      id: '2',
      title: 'How AI Agents Are Revolutionizing DeFi Trading Strategies',
      excerpt: 'Explore the cutting-edge intersection of artificial intelligence and decentralized finance, and how automated agents are changing the game.',
      category: 'AI & Technology',
      timeAgo: '1 day ago',
      image: '/img/blog/ai-defi.jpg',
      author: {
        name: 'Annette Black',
        role: 'Product Manager',
        avatar: 'https://ui-avatars.com/api/?name=Annette+Black&background=ec4899&color=fff&size=200&bold=true'
      },
      stats: {
        likes: 8,
        comments: 7,
        shares: 4
      },
      href: '/blog/ai-defi-revolution'
    },
    {
      id: '3',
      title: 'Virtuals Protocol Integration: What It Means for Users',
      excerpt: 'Learn about the latest Virtuals Protocol integration and how it enhances your trading experience with new AI-powered features.',
      category: 'Platform Updates',
      timeAgo: 'May 24, 2024',
      image: '/img/blog/virtuals-integration.jpg',
      author: {
        name: 'Marvin McKinney',
        role: 'Senior Developer',
        avatar: 'https://ui-avatars.com/api/?name=Marvin+McKinney&background=10b981&color=fff&size=200&bold=true'
      },
      stats: {
        likes: 15,
        comments: 12,
        shares: 8
      },
      href: '/blog/virtuals-protocol-integration'
    }
  ];
}

const { class: className = '' } = Astro.props;
---

<section class={`blog-section ${className}`}>
  <div class="container">
    <h2 class="section-title">Latest From Our Blog</h2>
    <div class="blog-grid">
      <!-- Featured Article -->
      <div class="featured-article">
        <article class="blog-card blog-card-featured">
          <div class="card-image-wrapper">
            <a href={blogPosts[0].href} class="card-link" aria-label="Read more"></a>
            <button class="bookmark-btn" aria-label="Save for later">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
              </svg>
            </button>
            <img src={blogPosts[0].image} class="card-image" alt={blogPosts[0].title} loading="eager" decoding="async">
          </div>
          <div class="card-body">
            <div class="card-meta">
              <a href={`/blog/category/${blogPosts[0].category.toLowerCase().replace(' & ', '-')}`} class="category-badge">
                {blogPosts[0].category}
              </a>
              <span class="time-ago">{blogPosts[0].timeAgo}</span>
            </div>
            <h3 class="card-title">
              <a href={blogPosts[0].href}>{blogPosts[0].title}</a>
            </h3>
            {blogPosts[0].excerpt && (
              <p class="card-excerpt">{blogPosts[0].excerpt}</p>
            )}
          </div>
          <div class="card-footer">
            <div class="author-info">
              <img src={blogPosts[0].author.avatar} class="author-avatar" alt={blogPosts[0].author.name} loading="eager" decoding="async" width="48" height="48">
              <div>
                <a href={`/author/${blogPosts[0].author.name.toLowerCase().replace(' ', '-')}`} class="author-name">
                  {blogPosts[0].author.name}
                </a>
              </div>
            </div>
          </div>
        </article>
      </div>

      <!-- Secondary Articles -->
      <div class="secondary-articles">
        {blogPosts.slice(1).map((post) => (
          <article class="blog-card blog-card-horizontal">
            <div class="card-row">
              <div class="card-image-wrapper">
                <a href={post.href} class="card-link" aria-label="Read more"></a>
                <button class="bookmark-btn" aria-label="Save for later">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                  </svg>
                </button>
                <img src={post.image} class="card-image" alt={post.title} loading="lazy" decoding="async" />
              </div>
              <div class="card-content">
                <div class="card-body">
                  <div class="card-meta">
                    <a href={`/blog/category/${post.category.toLowerCase().replace(/\s+/g, '-')}`} class="category-badge">
                      {post.category}
                    </a>
                    <span class="time-ago">{post.timeAgo}</span>
                  </div>
                  <h3 class="card-title">
                    <a href={post.href}>{post.title}</a>
                  </h3>
                  {post.excerpt && (
                    <p class="card-excerpt">{post.excerpt}</p>
                  )}
                </div>
                <div class="card-footer">
                  <div class="author-info">
                    <img src={post.author.avatar} class="author-avatar" alt={post.author.name} loading="lazy" decoding="async" width="48" height="48">
                    <div>
                      <a href={`/author/${post.author.name.toLowerCase().replace(' ', '-')}`} class="author-name">
                        {post.author.name}
                      </a>
                    </div>
                  </div>
                  {post.stats && (
                    <div class="post-stats">
                      <div class="stat-item">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
                        </svg>
                        <span>{post.stats.likes}</span>
                      </div>
                      <div class="stat-item">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                        </svg>
                        <span>{post.stats.comments}</span>
                      </div>
                      <div class="stat-item">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <circle cx="18" cy="5" r="3"></circle>
                          <circle cx="6" cy="12" r="3"></circle>
                          <circle cx="18" cy="19" r="3"></circle>
                          <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
                          <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
                        </svg>
                        <span>{post.stats.shares}</span>
                      </div>
                    </div>
                  )}
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
    
    <div class="blog-footer">
      <a href="/blog" class="btn btn-outline-primary btn-lg">More blog posts</a>
    </div>
  </div>
</section>

<style>
  .blog-section {
    padding: var(--space-3xl) 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-xl);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 900;
    text-align: center;
    margin-bottom: var(--space-lg);
    padding-bottom: 2rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  /* Learn More Button */
  .learn-more-wrapper {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .btn-learn-more {
    display: inline-block;
    padding: var(--space-sm) var(--space-xl);
    background: transparent;
    border: 2px solid white;
    color: white;
    font-size: var(--text-base);
    font-weight: 600;
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    cursor: pointer;
  }

  .btn-learn-more:hover {
    background: white;
    color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
  }

  /* Dark mode - ensure button is visible */
  .btn-learn-more-dark {
    border-color: var(--color-text);
    color: var(--color-text);
  }

  .btn-learn-more-dark:hover {
    background: var(--color-text);
    color: var(--color-background);
  }

  .blog-grid {
    display: grid;
    grid-template-columns: minmax(0, 5fr) minmax(0, 7fr);
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  /* Featured Article */
  .featured-article {
    display: flex;
  }

  .blog-card {
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all var(--transition-base);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .card-image-wrapper {
    position: relative;
    overflow: hidden;
    aspect-ratio: 16/9;
  }

  .blog-card-featured .card-image-wrapper {
    aspect-ratio: 4/3;
  }

  .card-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .bookmark-btn {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    z-index: 5;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-full);
    background: white;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .bookmark-btn:hover {
    background: var(--color-primary);
    color: white;
    transform: scale(1.1);
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-body {
    padding: var(--space-lg);
    flex: 1;
  }

  .card-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-md);
  }

  .category-badge {
    display: inline-block;
    padding: 4px 12px;
    background: var(--color-primary-alpha-10);
    color: var(--color-primary);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .category-badge:hover {
    background: var(--color-primary);
    color: white;
  }

  .time-ago {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .card-title {
    font-size: var(--text-lg);
    font-weight: 600;
    margin: 0;
  }

  .card-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .card-title a:hover {
    color: var(--color-primary);
  }

  .card-excerpt {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-top: var(--space-sm);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .blog-card-horizontal .card-excerpt {
    -webkit-line-clamp: 3;
  }

  .card-footer {
    padding: var(--space-lg);
    padding-top: 0;
    margin-top: auto;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-full);
    object-fit: cover;
  }

  .author-name {
    display: block;
    font-weight: 600;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .author-name:hover {
    color: var(--color-primary);
  }


  /* Horizontal Cards */
  .secondary-articles {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .blog-card-horizontal {
    height: auto;
  }

  .card-row {
    display: grid;
    grid-template-columns: minmax(0, 2fr) minmax(0, 3fr);
    height: 100%;
  }

  .blog-card-horizontal .card-image-wrapper {
    aspect-ratio: unset;
    min-height: 240px;
  }

  .blog-card-horizontal .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-content {
    display: flex;
    flex-direction: column;
  }

  .blog-card-horizontal .card-footer {
    border-top: 1px solid var(--color-border);
    padding-top: var(--space-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .post-stats {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 4px;
    color: var(--color-text-muted);
  }

  .stat-item svg {
    opacity: 0.7;
  }

  .stat-item span {
    font-size: var(--text-sm);
  }

  /* Blog Footer */
  .blog-footer {
    text-align: center;
    padding-top: var(--space-xl);
  }

  .btn {
    display: inline-block;
    padding: var(--space-md) var(--space-xl);
    font-size: var(--text-base);
    font-weight: 600;
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    cursor: pointer;
  }

  .btn-outline-primary {
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
    background: transparent;
  }

  .btn-outline-primary:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  .btn-lg {
    padding: var(--space-md) var(--space-2xl);
    font-size: var(--text-lg);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }

    .card-row {
      grid-template-columns: minmax(0, 2fr) minmax(0, 3fr);
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 var(--space-md);
    }

    .section-title {
      font-size: var(--text-2xl);
    }

    .card-row {
      grid-template-columns: 1fr;
    }

    .blog-card-horizontal .card-image-wrapper {
      min-height: 200px;
    }

    .blog-card-horizontal .card-footer {
      flex-direction: column;
      align-items: flex-start;
    }

    .post-stats {
      width: 100%;
      justify-content: flex-start;
    }
  }

  @media (max-width: 640px) {
    .blog-section {
      padding: var(--space-2xl) 0;
    }

    .blog-grid {
      gap: var(--space-lg);
    }

    .btn-lg {
      width: 100%;
    }
  }

  /* Dark theme adjustments */
  [data-theme="dark"] .blog-card {
    background: var(--color-surface);
  }

  [data-theme="dark"] .bookmark-btn {
    background: var(--color-surface);
    color: var(--color-text);
  }

  [data-theme="dark"] .bookmark-btn:hover {
    background: var(--color-primary);
    color: white;
  }
</style>

<script>
  // Handle bookmark functionality
  document.addEventListener('DOMContentLoaded', () => {
    const bookmarkBtns = document.querySelectorAll('.bookmark-btn');
    
    bookmarkBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        // Toggle bookmarked state
        btn.classList.toggle('bookmarked');
        
        // Update icon fill
        const svg = btn.querySelector('svg');
        if (btn.classList.contains('bookmarked')) {
          svg.setAttribute('fill', 'currentColor');
        } else {
          svg.setAttribute('fill', 'none');
        }
        
        // Here you would typically save to localStorage or make an API call
        console.log('Bookmark toggled');
      });
    });
  });
</script>